@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OneCenter</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/sbadmin")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">OneCenter 管理系統</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, htmlAttributes: new { role = "form" }))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Account, htmlAttributes: new { @class = "form-control", placeholder = "帳號" })
                                    @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })

                                    @*<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>*@
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", @placeholder = "密碼" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                    @*<input class="form-control" placeholder="Password" name="password" type="password" value="">*@
                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">登入</button>
                            </fieldset>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sbadmin")
</body>
</html>